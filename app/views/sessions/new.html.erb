<h1>User Login</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :user_name %> </br>
    <%= text_field_tag :user_name, params[:user_name] %> </br>
  </div>

  <div class="field">
    <%= label_tag :password %> </br>
    <%= password_field_tag :password, params[:password] %> </br>
  </div>

<div class="actions" > <%= submit_tag "Login " %> </div>
<% end %>

<h1>Listing trips</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Trip date</th>
    <th>User</th>
    <th>Seats max</th>
    <th>Seats left</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.from %></td>
    <td><%= trip.to %></td>
    <td><%= trip.trip_date %></td>
    <td><%= trip.user_id %></td>
    <td><%= trip.seats_max %></td>
    <td><%= trip.seats_left %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

